<Window x:Class="ProyectoDSI115_G5_2021.Autorizacion.VerificarSolicitud"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoDSI115_G5_2021.Autorizacion"
        mc:Ignorable="d"
        Title="VerificarSolicitud" Height="730" Width="810">
    <Grid>
        <Rectangle Fill="#FFC91029" Height="61" Stroke="Black" VerticalAlignment="Top" StrokeThickness="0"/>
        <Label Content="Aprobar Solicitudes" HorizontalAlignment="Left" Margin="19,10,0,0" VerticalAlignment="Top" FontSize="22" FontFamily="Comic Sans MS" FontWeight="Bold" Foreground="White" Height="39"/>
        <Rectangle  Fill="#FFF1EBEC" Margin="20,100,0,0" Stroke="Black" Height="440" VerticalAlignment="Top" HorizontalAlignment="Left" Width="150"/>
        <Button x:Name="btnVolver" Margin="40,0,0,20" Click="BtnVolver_Click" HorizontalAlignment="Left" Width="110" Background="{x:Null}" BorderBrush="{x:Null}" Height="120" VerticalAlignment="Bottom">
            <StackPanel>
                <Image Source="/FYSIEX;component/Images/regreso.png" Height="90" Width="90"/>
                <Label Content="Volver" FontSize="14" FontFamily="Segoe UI Emoji" HorizontalContentAlignment="Center" />
            </StackPanel>
        </Button>
        <Label Content="Seleccione el estado de la solicitud" Margin="0,65,15,0" VerticalAlignment="Top" FontSize="18" FontFamily="Comic Sans MS" Foreground="#FF0E0E0E" HorizontalAlignment="Right" Height="34"/>
        <DataGrid x:Name="dataDetalles" ItemsSource="{Binding}" AlternatingRowBackground="#FFEA4A4A" AutoGenerateColumns="False" Margin="185,100,16,16">
            <DataGrid.Columns>
                <DataGridTextColumn Visibility="Hidden" Header="Detalle" Binding="{Binding COD_DETALLE}" IsReadOnly="True"/>
                <DataGridTextColumn MinWidth="100" Header="Código" Binding="{Binding COD_MATERIAL}"/>
                <DataGridTextColumn MinWidth="150" Header="Material" Binding="{Binding NOMBRE_MATERIAL}"/>
                <DataGridTextColumn MinWidth="150" Header="Presentación" Binding="{Binding UNIDAD_MEDIDA_MATERIAL}"/>
                <DataGridTextColumn MinWidth="90" Header="Cantidad" Binding="{Binding CANTIDAD_DETALLE}"/>
                <DataGridTextColumn MinWidth="90" Header="Existencias" Binding="{Binding EXISTENCIA_MATERIAL}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Background="#FFF1EBEC" x:Name="btnAprobar"  HorizontalAlignment="Left" Margin="40,120,0,0" VerticalAlignment="Top" Width="110" Height="120" Click="BtnAprobar_Click" BorderThickness="0">
            <StackPanel>
                <Image x:Name="imgAprobar" Source="/FYSIEX;component/Images/aprobar.png" Height="90" Width="90"/>
                <Label x:Name="labelAprobar" Content="Aprobar" HorizontalAlignment="Center"/>
            </StackPanel>
        </Button>
        <Button Background="#FFF1EBEC" x:Name="btnDenegar"  HorizontalAlignment="Left" Margin="40,260,0,0" VerticalAlignment="Top" Width="110" Height="120" Click="BtnDenegar_Click" BorderThickness="0">
            <StackPanel>
                <Image x:Name="imgDenegar" Source="/FYSIEX;component/Images/denegar.png" Height="90" Width="90"/>
                <Label x:Name="labelDenegar" Content="Denegar" HorizontalAlignment="Center"/>
            </StackPanel>
        </Button>
        <Button Background="#FFF1EBEC" x:Name="btnImprimir"  HorizontalAlignment="Left" Margin="40,400,0,0" VerticalAlignment="Top" Width="110" Height="120" Click="BtnImprimir_Click" BorderThickness="0">
            <StackPanel>
                <Image x:Name="imgImprimir" Source="/FYSIEX;component/Images/impresora.png" Height="90" Width="90"/>
                <Label x:Name="labelImprimir" Content="Imprimir" HorizontalAlignment="Center"/>
            </StackPanel>
        </Button>
    </Grid>
</Window>
